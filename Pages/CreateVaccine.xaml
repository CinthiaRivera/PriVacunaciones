<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeQrScanner.Pages.CreateVaccine"
             Title="Registrar Vacuna">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color= "#6B76FF" Offset="0.0" />
            <GradientStop Color= "#C6F8FF" Offset="1.0" /> 
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Spacing="10">
        <Label Text="Nombre de la Vacuna" />
        <Entry Placeholder="Nombre de la mascota" x:Name="NamePet" />

        <Label Text="Descripción" />
        <Entry Placeholder="Descripción" x:Name="Description" />

        <Button Text="Guardar" Clicked="GuardarRegistro_Clicked" />

        <Button Text="Volver Atrás" Clicked="Volver_Clicked" />
    </VerticalStackLayout>
</ContentPage>

